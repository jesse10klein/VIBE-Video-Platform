extends ../layout

block style
  link(href="/style/login.css" rel="stylesheet")

block content

  #bg
    img(src="/images/login-background.jpg")

  #form-div
    #title= "Change Your Password"
    if error
      p.error= error
    form(action="/account/change-password" method="POST")
      .form-element
        p  Current Password: 
        input(type='text' name='currentPass')
      .form-element
        p  New Password: 
        input(type='text' name='newPass')
      .form-element
        p  Confirm New Password: 
        input(type='text' name='newPassDup')
      input#resetPassword(type='submit' value="Change Password")