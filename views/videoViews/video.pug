extends ../layout

block content
  if videos
    h1#welcome= title
    #video-container
      each video in videos  
        include ../templates/video-template

  else
    h1#welcome= message

block style
  link(href='/style/videos.css' rel='stylesheet')
  link(href='/style/templates/video-template.css' rel='stylesheet')
  link(href="https://fonts.googleapis.com/css?family=Oxanium&display=swap" rel="stylesheet")

block script
  script(src='/js/videos.js')