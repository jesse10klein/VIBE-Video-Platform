#menu-bar
  a#home-image(href='/')
    img(src='/images/main-menu/vibe.svg') 

  #icons-left
    a#hot(href='/video/hot')
      img(src='/images/main-menu/hot.svg')
    a#subs(href='/video/subscriptions')
      img(src='/images/main-menu/subs.svg')

  form#search-bar(action="/search" method="POST")
    if searchTerm
      input#search-query(type='text' name='searchTerm' value=`${searchTerm}`)
    else
      input#search-query(type='text' name='searchTerm')
    input#submit(type='submit' value='Search')

  #icons-right
    a#messagesIcon(href='/messages/home')
      p#messageNumber= "0"
      img(src='/images/main-menu/messages.svg')
    #notificationDiv 
      p#notificationNumber= "10"
      button#notifications(onclick="fetchNotifications()")
        img(src='/images/main-menu/notifications.svg') 
      #notificationContainer

  if username
    #dd
      a#dropdown-button(href='/account') Account
      #dropdown-content
        a(href='/upload') Upload
        a#username(href=`/account`)= `Account`
        a(href='/users/logout') Log Out
  else
    a#login(href='/users/login') Login/Register