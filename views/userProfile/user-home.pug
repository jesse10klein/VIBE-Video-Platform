extends layout 

block style
  link(href="/style/userProfile/userprofilevideos.css" rel="stylesheet")

block content
  h1= message

  #video-container
    if videos
      each video in videos
        .video-preview
          a(href=`/video/${video.id}`)
            h1= video.title
            h2= video.uploader
            video(src=`/videos/${video.videoURL}#t=10`)
            a(href=`/account/delete-video/${video.id}`)
    else
      h1= emptyMessage

